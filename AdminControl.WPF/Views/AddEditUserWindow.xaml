<Window x:Class="AdminControl.WPF.Views.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="620" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#ECF0F1">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="{Binding WindowTitle}" 
                   FontSize="22" FontWeight="Bold" 
                   Foreground="#2C3E50"
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Логін -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="Логін: *" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             Height="35"
                             IsEnabled="{Binding IsLoginEditable}"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                    <TextBlock Text="Email: *" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             Height="35"/>
                </StackPanel>

                <!-- Пароль  -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10"
                            Visibility="{Binding PasswordVisibility}">
                    <TextBlock Text="Пароль: *" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <PasswordBox x:Name="pbPassword" Height="35"/>
                </StackPanel>

                <!-- Підтвердження паролю -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10"
                            Visibility="{Binding PasswordVisibility}">
                    <TextBlock Text="Підтвердити пароль: *" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <PasswordBox x:Name="pbConfirmPassword" Height="35"/>
                </StackPanel>

                <!-- Ім'я -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="Ім'я: *" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             Height="35"/>
                </StackPanel>

                <!-- Прізвище -->
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,10">
                    <TextBlock Text="Прізвище: *" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             Height="35"/>
                </StackPanel>

                <!-- Телефон -->
                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="Телефон:" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             Height="35"/>
                </StackPanel>

                <!-- Стать (ComboBox) -->
                <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,10">
                    <TextBlock Text="Стать:" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <ComboBox ItemsSource="{Binding Genders}"
                              SelectedItem="{Binding SelectedGender}"
                              Height="35"/>
                </StackPanel>

                <!-- Адреса  -->
                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
                    <TextBlock Text="Адреса:" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                             Height="35"/>
                </StackPanel>

                <!-- Роль (ComboBox) -->
                <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="Роль: *" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <ComboBox ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding SelectedRole}"
                              DisplayMemberPath="RoleName"
                              Height="35"/>
                </StackPanel>

                <!-- Активний -->
                <StackPanel Grid.Row="5" Grid.Column="1" Margin="10,0,0,10" VerticalAlignment="Bottom">
                    <CheckBox Content="Активний користувач" 
                              IsChecked="{Binding IsActive}" 
                              FontSize="14"
                              Margin="0,0,0,8"/>
                </StackPanel>

                <!-- Повідомлення про помилку -->
                <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                        Background="#FADBD8" 
                        CornerRadius="5" 
                        Padding="10"
                        Margin="0,10,0,0"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}, FallbackValue=Collapsed}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#C0392B" 
                               TextWrapping="Wrap"
                               FontSize="12"/>
                </Border>

                <!-- Підказка -->
                <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                           Text="* - обов'язкові поля"
                           Foreground="#BDC3C7"
                           FontSize="11"
                           Margin="0,10,0,0"/>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Скасувати" 
                    Width="110" 
                    Height="38"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="{Binding SaveButtonText}" 
                    Width="110" 
                    Height="38"
                    Style="{StaticResource AddButtonStyle}"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
